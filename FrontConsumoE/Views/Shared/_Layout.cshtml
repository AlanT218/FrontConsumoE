<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontConsumoE</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Fuente Tan Headline desde Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Tan+Headline&display=swap" rel="stylesheet" />

    <!-- Íconos Material Symbols (Google Fonts) -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- CSS personalizado del sitio y estilos generados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrontConsumoE.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header con barra de navegación personalizada -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <!-- Logo y nombre del sistema (estático, no es un botón) -->
                <div class="navbar-brand">
                    <img src="~/Img/LogoGestion.png" alt="logo" class="logo-img" />
                    Opti Energy
                </div>


                <!-- Botones de navegación para login y creación de usuario -->
                <div class="d-flex">
                    <a class="nav-link nav-link-custom" asp-area="" asp-controller="User" asp-action="Login">
                        <span class="material-symbols-outlined">login</span> Iniciar sesión
                    </a>
                    <a class="nav-link nav-link-custom" asp-area="" asp-controller="User" asp-action="CreateUser">
                        <span class="material-symbols-outlined">person_raised_hand</span> Crear Usuario
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal para el contenido de cada vista -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Pie de página simple con link a privacidad -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FrontConsumoE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <!-- Scripts de soporte (jQuery, Bootstrap y personalizado) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Estilos personalizados -->
    <style>
        /* Fuente general para todo el sitio */
        body {
            font-family: 'Tan Headline', sans-serif;
        }

        /* Barra de navegación */
        .navbar-custom {
            background-color: #b2bdb8;
            padding: 10px 30px;
        }

        /* Estilo del título/logo del sistema */
        .navbar-brand {
            font-size: 53px;
            font-weight: bold;
            color: #00bf63 !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* Imagen del logo ampliada */
        .logo-img {
            width: 80px;
            height: 80px;
        }

        /* Enlaces de navegación */
        .nav-link-custom {
            font-size: 45px;
            color: #005b0c !important;
            font-weight: bold;
            margin-left: 25px;
        }

        /* Alineación vertical de íconos Material Symbols */
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            vertical-align: middle;
        }

        .navbar-nav {
            align-items: center;
        }
    </style>
</body>
</html>
