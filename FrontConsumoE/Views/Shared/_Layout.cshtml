<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontConsumoE</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Íconos Material Symbols (Google Fonts) -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- CSS personalizado del sitio y estilos generados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrontConsumoE.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header con barra de navegación personalizada -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <!-- Logo y nombre del sistema (estático, no es un botón) -->
                <div class="navbar-brand">
                    <img src="~/Img/LogoGestion.png" alt="logo" class="logo-img" />
                    Opti Energy
                </div>

                <!-- Botones de navegación para login y creación de usuario -->
                <div class="d-flex">
                    <a class="nav-link nav-link-custom" asp-area="" asp-controller="User" asp-action="Login">
                        <span class="material-symbols-outlined">passkey</span> Iniciar sesión
                    </a>
                    <a class="nav-link nav-link-custom" asp-area="" asp-controller="User" asp-action="CreateUser">
                        <span class="material-symbols-outlined">person_raised_hand</span> Crear Usuario
                    </a>
                </div>

            </div>
        </nav>
    </header>

    <!-- Contenedor principal para el contenido de cada vista -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Pie de página simple con link a privacidad -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FrontConsumoE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <!-- Popup informativo -->
    <div id="popup" class="popup-hidden">
        <div class="popup-content">
            <span id="popup-mensaje"></span>
            <div class="popup-boton">
                <button onclick="cerrarPopup()">Aceptar</button>
            </div>
        </div>
    </div>

    <!-- Modal de confirmación -->
    <div id="modalConfirmacion" class="popup-hidden">
        <div class="popup-content">
            <p id="modalTexto"></p>
            <div class="popup-boton">
                <button id="btnConfirmarSi">Sí</button>
                <button id="btnConfirmarNo">No</button>
            </div>
        </div>
    </div>

    <!-- Scripts de soporte (jQuery, Bootstrap y personalizado) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Funciones JS globales para popup -->
    <script>
        window.mostrarPopup = function (mensaje) {
            const popup = document.getElementById("popup");
            document.getElementById("popup-mensaje").textContent = mensaje || "¡Mensaje no especificado!";
            popup.classList.remove("popup-hidden");
        };

        window.cerrarPopup = function () {
            document.getElementById("popup").classList.add("popup-hidden");
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Estilos personalizados -->
    <style>
        body {
            font-family: "M PLUS Rounded 1c", sans-serif;
            font-size: 1.8em;
        }

        .navbar-custom {
            background-color: #b2bdb8;
            padding: 10px 30px;
        }

        .navbar-brand {
            font-size: 53px;
            font-weight: bold;
            color: #00bf63 !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-img {
            width: 100px;
            height: 100px;
        }

        .nav-link-custom {
            font-size: 30px;
            color: #005b0c !important;
            font-weight: bold;
            margin-left: 25px;
        }

        .material-symbols-outlined {
            vertical-align: middle;
            font-size: 40px;
        }

        .navbar-nav {
            align-items: center;
        }

        .border-top .container {
            font-size: 0.8em;
        }

        /* Popup estilos */
        .popup-hidden {
            display: none;
        }

        .popup-content {
            background: white;
            border: 2px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            width: 400px;
            max-width: 90%;
            margin: 100px auto;
            text-align: center;
            z-index: 1050;
            position: fixed;
            top: 30%;
            left: 50%;
            transform: translate(-50%, -30%);
            box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
        }

        .popup-boton {
            margin-top: 20px;
        }

            .popup-boton button {
                font-size: 1em;
                padding: 5px 15px;
                border: none;
                background-color: #005b0c;
                color: white;
                border-radius: 5px;
                cursor: pointer;
            }

                .popup-boton button:hover {
                    background-color: #004a09;
                }
    </style>
</body>
</html>
