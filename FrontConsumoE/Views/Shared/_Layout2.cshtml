@* Layout para usuarios logueados con solo botón de Cerrar sesión *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontConsumoE</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrontConsumoE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div class="navbar-brand">
                    <img src="~/Img/LogoGestion.png" alt="logo" class="logo-img" />
                    Opti Energy
                </div>
                <div class="d-flex">
                    <a href="#" class="nav-link nav-link-custom" id="logout-link">
                        <span class="material-symbols-outlined">logout</span> Cerrar sesión
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FrontConsumoE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById("logout-link").addEventListener("click", function (e) {
            e.preventDefault();
            localStorage.removeItem("token");
            window.location.href = "/User/Login";
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        body {
            font-family: "M PLUS Rounded 1c", sans-serif;
            font-size: 1.8em;
        }

        .navbar-custom {
            background-color: #b2bdb8;
            padding: 10px 30px;
        }

        .navbar-brand {
            font-size: 53px;
            font-weight: bold;
            color: #00bf63 !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-img {
            width: 100px;
            height: 100px;
        }

        .nav-link-custom {
            font-size: 30px;
            color: #005b0c !important;
            font-weight: bold;
            margin-left: 25px;
        }

        .material-symbols-outlined {
            vertical-align: middle;
            font-size: 40px;
        }

        .border-top .container {
            font-size: 0.8em;
        }
    </style>
</body>
</html>
