
@{
    ViewData["Title"] = "GestionElec";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link rel="stylesheet" href="/css/site.css">
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Electrodomésticos</title>
    
</head>
<body>
    <h1 class="titulo">Añadir Electrodomésticos</h1>
    <div class="contenedor">
        <!-- Formulario principal -->
        <form id="gestion-form">
            <div class="form-group">
                <label for="electro">Electrodoméstico:</label>
                <select id="electro" required>
                    <option value="">Seleccione un electrodoméstico</option>
                </select>
            </div>

            <div class="form-group">
                <label for="zona">Zona:</label>
                <select id="zona" required>
                    <option value="">Seleccione una zona</option>
                </select>
            </div>

            <div class="form-group">
                <label for="consumo">Potencia (W):</label>
                <input type="number" id="consumo" min="1" required>
            </div>

            <button type="button" id="agregar-boton" class="btn-detalles">Agregar</button>
        </form>
    </div>
    <button class="btn-volver" onclick="window.history.back()">⮐</button>

    <script src="~/js/Dc/AgregarElecZona.js"></script>
    
    <style>
        body {
            background-image: url('/Img/PlanoReco.png');
            background-size: cover; /* para cubrir toda la pantalla */
            background-repeat: no-repeat;
            background-attachment: fixed; /* para que no se mueva al hacer scroll */
            background-position: center;
        }

        .titulo {
            text-align: center;
            margin-top: 20px;
            font-size: 1.7em;
            text-shadow: 1px 1px 3px gray;
        }

        .contenedor {
            font-size: 0.8em;
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            justify-content: center;
            background-color: #e8e8e8;
            border: 3px solid #b2bdb8;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-radius: 15px;
            width: 500px;
            padding: 30px;
            margin: auto
        }

        

        .form-group {
            margin-bottom: 15px;
            
        }

        label {
            font-weight: bold;
        }

        select, input {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-detalles {
            background-color: #00bf63; /* Color del botón */
            border: 2px solid #00bf63;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 10px; /* Bordes redondeados */
            display: block; /* Cambia a bloque para centrar con margin */
            transition: all 0.3s ease;
            margin: 15px auto; /* Centrado horizontal y espaciado superior */
            width: 135px; /* Ancho del botón */
        }

            .btn-detalles:hover {
                background-color: white;
                border: 2px solid #00bf63;
                color: #00bf63;
            }


    </style>
    
</body>
</html>
