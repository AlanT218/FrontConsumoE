
@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>S.I Electricidad</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>S.I Electricidad</h1>
        <div class="card-container">
            <div class="card">
                <img src="~/Img/añadir.png" alt="Añadir Electrodomésticos">
                <button class="card-title" onclick="window.location.href='/Dueniocasa/GestionElec';">Añadir Electrodomésticos</button>
            </div>
            <div class="card">
                <img src="~/Img/act-delete.png" alt="Actualizar y eliminar Electrodomésticos">
                <button class="card-title" onclick="window.location.href='/Dueniocasa/ActuElimiElec';">Actualizar y eliminar Electrodomésticos</button>
            </div>
            <div class="card">
                <img src="~/Img/gestion.png" alt="Gestión Consumo">
                <button class="card-title" onclick="window.location.href='/Dueniocasa/GestionConsumo';">Gestión Consumo de Energia</button>
            </div>
        </div>
    </div>
    <button class="btn-volver" onclick="window.history.back()">⮐</button>

    <link rel="stylesheet" href="styles.css">

 <style>
        body {
            background-color: #bdebc3; /* Color de fondo verde claro */
            font-family: Arial, sans-serif;
            text-align: center;
        }

        .container {
            padding: 20px;
        }

        h1 {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 30px;
        }
        /* Contenedor de tarjetas */
        .card-container {
            display: flex;
            justify-content: center;
            gap: 45px;
        }

        /* Tarjetas */
        .card {
            background-color: #d9d9d9; /* Interior gris claro */
            border: 10px solid white; /* Margen blanco grueso */
            border-radius: 10px; /* Bordes redondeados */
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra ligera */
            width: 250px; /* Tamaño constante */
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease; /* Animación suave */
        }

            /* Efecto hover para tarjetas */
            .card:hover {
                transform: scale(1.09); /* Agranda un poco al hacer hover */
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.55); /* Sombra más pronunciada */
            }

            .card img {
                width: 150px;
                height: 150px;
                margin: auto;
            }


        /* Botón de título */
        .card-title {
            background-color: white;
            border: none;
            color: black;
            font-weight: bold;
            border-radius: 10px;
            font-size: 18px;
            padding: 10px 0.5px;
            margin-top: 15px;
            cursor: pointer;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            transition: background-color 0.3s ease;
        }
            /* Hover dinámico en el botón */
            .card-title:hover {
                background-color: #bdebc3; /* Cambia a verde claro */
                color: white; /* Texto blanco en hover */
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2); /* Intensifica sombra */
            }

    </style>
</body>
</html>
