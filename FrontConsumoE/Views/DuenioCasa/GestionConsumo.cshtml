@{
    ViewData["Title"] = "GestionConsumo";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 style="text-align: center;">Gestión de Consumo</h2>

<div id="contenedor-zonas" class="zonas-container">
    <!-- Aquí se cargarán dinámicamente las zonas y sus electrodomésticos -->
</div>

<!-- Modal de Confirmación -->
<div id="confirmacionModal" class="modal" style="display:none;">
    <div class="modal-content">
        <p id="modalMensaje"></p>
        <div class="modal-buttons">
            <button id="btnConfirmar">✔</button>
            <button id="btnCancelar">✖</button>
        </div>
    </div>
</div>

<style>
    /* Contenedor general de zonas */
    .zonas-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        padding: 20px;
    }

    /* Caja individual de cada zona (estilo .card) */
    .zona-box {
        background-color: #e8e8e8;
        border: 3px solid #b2bdb8;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        padding: 25px;
        width: 350px;
        text-align: center;
        overflow: hidden;
    }

        .zona-box h3 {
            text-align: center;
            margin-bottom: 15px;
        }

    /* Electrodomésticos */
    .electro-box {
        padding: 10px;
        margin: 5px 0;
        border-radius: 8px;
        color: white;
        cursor: pointer;
        font-weight: bold;
        text-align: center;
        transition: background-color 0.3s ease;
    }

    .encendido {
        background-color: green !important;
    }

    .apagado {
        background-color: red !important;
    }

    .electro-box:hover {
        opacity: 0.8;
    }

    /* Modal */
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 999;
        font-family: inherit; /* Usa la fuente de styles.css */
    }

    .modal-content {
        background-color: #d9d9d9;
        padding: 25px;
        border-radius: 10px;
        width: 308px; /* Aumentado 10% desde 280px */
        text-align: center;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    .modal-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 15px;
    }

        .modal-buttons button {
            padding: 11px;
            width: 50px; /* Aumentado 10% */
            height: 50px; /* Aumentado 10% */
            border-radius: 50%;
            border: none;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

    #btnConfirmar {
        background-color: #00a651;
        color: white;
    }

    #btnCancelar {
        background-color: #6c757d;
        color: white;
    }

        #btnConfirmar:hover,
        #btnCancelar:hover {
            opacity: 0.8;
        }</style>

<!-- JS -->
<script src="~/js/Dc/gestionConsumo.js"></script>
