@{
    ViewData["Title"] = "MenuIndex";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<p class="p0">
    <button class="b0">Botón 0</button>
    Bienvenido a la página de gestión de casas
</p>
<p class="p1">
    Bienvenido a la página de gestión
    <button class="b1">Botón 1</button>
</p>
<style>
    body {
        background-image: url('/Img/Plano.png');
        background-size: cover; /* para cubrir toda la pantalla */
        background-repeat: no-repeat;
    }

    .p0 {
        margin-top: 110px;
        background-color: #8dc63f; /* Color de fondo específico */
        width: 60vw; /* Ocupa la mitad de la pantalla */
        height: 120px; /* Ajusta la altura según necesites */
        position: absolute;
        right: 0;
        top: 100px;
        border-top-left-radius: 20px; /* Redondear la esquina izquierda superior */
        border-bottom-left-radius: 20px; /* Redondear la esquina izquierda inferior */
        padding: 30px; /* Espacio interno */
        text-align: left; /* Alinear el contenido a la derecha */
    }

    .p1 {
        margin-top: 150px;
        background-color: #bdebc3; /* Color de fondo específico */
        width: 50vw; /* Ocupa la mitad de la pantalla */
        height: 120px; /* Ajusta la altura según necesites */
        position: absolute;
        left: 0;
        top: 300px;
        border-top-right-radius: 20px; /* Redondear la esquina derecha superior */
        border-bottom-right-radius: 20px; /* Redondear la esquina derecha inferior */
        padding: 30px; /* Espacio interno */
        text-align: right; /* Alinear el contenido a la izquierda */
    }

    .b0, .b1 {
        background-color: #00bf63; /* Color del botón */
        border-radius: 10px; /* Bordes redondeados */
        border: 4px solid white; /* Borde grueso blanco */
        padding: 10px 20px; /* Ajustar tamaño del botón */
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }

    .b0 {
        margin-right: 10px;
    }

    .b1 {
        margin-left: 10px;
    }

		.b0:hover, .b1:hover {
            background-color: #b2bdb8; /* Color del botón al pasar el mouse */
            border: 4px solid #b2bdb8; /* Borde del botón al pasar el mouse */
		}

    footer {
        margin-top: 500px;
    }
</style>
