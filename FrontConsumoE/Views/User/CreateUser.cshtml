@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Registro</title>
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@500;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Contenedor principal -->
    <div class="container">
        <div class="form-title">Formulario de Registro</div>
        <form id="register-form">
            <div class="form-group">
                <label for="Nombre">Nombres</label>
                <input type="text" id="Nombre" name="Nombre" placeholder="Ingrese sus nombres">
            </div>

            <div class="form-group">
                <label for="Apellido">Apellidos</label>
                <input type="text" id="Apellido" name="Apellido" placeholder="Ingrese sus apellidos">
            </div>

            <div class="form-group">
                <label for="Correo">Correo</label>
                <input type="email" id="Correo" name="Correo" placeholder="Ingrese su correo">
            </div>

            <div class="form-group">
                <label for="Contra">Contraseña</label>
                <input type="password" id="Contra" name="Contra" placeholder="Ingrese su contraseña">
            </div>

            <!-- Valores ocultos predeterminados -->
            <input type="hidden" id="IdRol" name="IdRol" value="2"> <!-- Rol predeterminado -->
            <input type="hidden" id="IdEstado" name="IdEstado" value="1"> <!-- Estado activo -->

            <div class="button-group">
                <button type="submit" class="btn-submit">Crear</button>
                <a class="btn-cancel" asp-area="" asp-controller="Home" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>

    <script src="~/js/createUser.js"></script>

    <!-- Logo en la esquina superior derecha -->
    <img src="~/Img/LogoGestion.png" alt="Logo" class="logo">

    <style>
        body {
            font-family: "M PLUS Rounded 1c", sans-serif;
            font-size: 1.8em;
            margin: 0;
            height: 100vh;
            background-color: #bdebc3;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .container {
            background-color: white;
            width: 450px;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .form-title {
            font-size: 40px;
            font-weight: bold;
            color: #008000;
            text-shadow: 2px 2px 2px #004d00;
            margin-bottom: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 80%;
            margin: 0 auto 15px;
        }

        label {
            font-weight: bold;
            font-size: 14px;
            text-align: center;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 10px;
            border: 2px solid #ccc;
            border-radius: 20px;
            background-color: #d3d8d3;
            font-size: 14px;
            text-align: center;
        }

        .button-group {
            margin-top: 15px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .btn-submit {
            width: 50%;
            padding: 8px;
            background: linear-gradient(to bottom, #bbb, #555);
            box-shadow: inset 0px -3px 5px rgba(0, 0, 0, 0.3), 0px 3px 5px rgba(0, 0, 0, 0.2);
            border: none;
            border-radius: 15px;
            cursor: pointer;
            font-size: 18px;
            color: white;
            font-family: "M PLUS Rounded 1c", sans-serif;
        }

        .btn-cancel {
            margin-top: 10px;
            text-decoration: underline;
            color: black;
            font-size: 14px;
            text-align: center;
            transition: color 0.3s ease;
        }

            .btn-cancel:hover {
                color: purple;
            }

        .logo {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 150px;
            height: auto;
        }
    </style>
</body>
</html>
