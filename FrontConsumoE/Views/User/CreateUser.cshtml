@{
    // ViewData["Title"] = "CreateUser";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Registro</title>
    <link href="https://fonts.googleapis.com/css2?family=Chau+Philomene+One&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Contenedor principal -->
    <div class="container">
        <div class="form-title">Formulario de Registro</div>
        <form>
            <div class="form-group">
                <label for="nombres">Nombres</label>
                <input type="text" id="nombres" name="nombres">
            </div>

            <div class="form-group">
                <label for="apellidos">Apellidos</label>
                <input type="text" id="apellidos" name="apellidos">
            </div>

            <div class="form-group">
                <label for="correo">Correo</label>
                <input type="email" id="correo" name="correo">
            </div>

            <div class="form-group">
                <label for="username">Nombre Usuario</label>
                <input type="text" id="username" name="username">
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password">
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">Crear</button>
                <a href="#" class="btn-cancel">Cancelar</a>
            </div>
        </form>
    </div>

    <!-- Logo en la esquina superior derecha -->
    <img src="~/Img/LogoGestion.png" alt="Logo" class="logo">

</body>

<style>
    /* Estilos generales */
    body {
        margin: 0;
        height: 100vh;
        background-color: #bdebc3;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    /* Contenedor del formulario */
    .container {
        background-color: white;
        width: 450px; /* Ancho del formulario */
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    /* Título del formulario */
    .form-title {
        font-size: 40px;
        font-weight: bold;
        color: #008000;
        text-shadow: 2px 2px 2px #004d00;
        font-family: "Chau Philomene One", sans-serif;
        margin-bottom: 20px;
    }

    /* Espaciado entre cada campo */
    .form-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80%;
        margin: 0 auto 15px; /* Espacio entre campos */
    }

    label {
        font-weight: bold;
        font-size: 14px;
        align-self: flex-start;
    }

    input {
        width: 100%;
        padding: 10px;
        border: 2px solid #ccc;
        border-radius: 20px;
        background-color: #d3d8d3;
        font-size: 14px;
        text-align: center;
    }

    /* Espacio para los botones */
    .button-group {
        margin-top: 15px;
    }

    /* Botón "Crear" más pequeño */
    .btn-submit {
        width: 30%; /* ancho del botón */
        padding: 8px;
        background: linear-gradient(to bottom, #bbb, #555);
        box-shadow: inset 0px -3px 5px rgba(0, 0, 0, 0.3), 0px 3px 5px rgba(0, 0, 0, 0.2);
        border: none;
        border-radius: 30px;
        cursor: pointer;
        font-size: 18px;
        color: white;
        font-family: "Chau Philomene One", sans-serif;
    }

    .btn-cancel {
        display: block;
        margin-top: 10px;
        text-decoration: none;
        color: black;
        font-size: 14px;
    }

    /* Logo en la esquina superior derecha */
    .logo {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 80px; /* Tamaño ajustado */
        height: auto;
    }
</style>
</html>
