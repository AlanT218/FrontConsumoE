@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@500;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="logo-section">
            <img src="~/Img/LogoGestion.png" alt="Logo del Proyecto" class="logo">
        </div>

        <div class="login-section">
            <h2 class="form-title">Iniciar sesión</h2>
            <form id="loginForm">
                <!-- 👈 Agregado id aquí -->
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <div class="input-group">
                        <span class="material-icons">account_circle</span>
                        <input type="text" id="username" name="username">
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <div class="input-group">
                        <span class="material-icons">lock</span>
                        <input type="password" id="password" name="password">
                    </div>
                </div>

                <div class="button-container">
                    <button type="submit" class="btn-submit">Ingresar</button>
                    <a class="btn-register" asp-controller="User" asp-action="CreateUser">Registrarse</a>
                </div>
            </form>
        </div>
    </div>

    <style>
        body {
            font-family: "M PLUS Rounded 1c", sans-serif;
            font-size: 1.8em;
            margin: 0;
            height: 100vh;
            background-color: #bdebc3;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            display: flex;
            width: 650px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .logo-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
            padding: 20px;
        }

        .logo {
            width: 250px;
            height: auto;
        }

        .login-section {
            flex: 1;
            background-color: #d3d3d3;
            padding: 20px;
            text-align: center;
        }

        .form-title {
            font-size: 35px;
            font-weight: bold;
            color: #008000;
            text-shadow: 2px 2px 2px #004d00;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                font-size: 14px;
                display: block;
                text-align: center;
                margin-bottom: 5px;
            }

        .input-group {
            display: flex;
            align-items: center;
            background: white;
            border: 2px solid black;
            border-radius: 25px;
            padding: 5px;
        }

            .input-group span {
                font-size: 24px;
                padding: 5px;
            }

        input {
            border: none;
            outline: none;
            flex: 1;
            padding: 8px;
            font-size: 14px;
            text-align: center;
        }

        .button-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 10px;
        }

        .btn-submit {
            width: 45%;
            padding: 8px;
            background: linear-gradient(to bottom, #bbb, #555);
            box-shadow: inset 0px -3px 5px rgba(0, 0, 0, 0.3), 0px 3px 5px rgba(0, 0, 0, 0.2);
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-size: 18px;
            color: white;
            font-family: "M PLUS Rounded 1c", sans-serif;
            margin-bottom: 10px;
        }

        .btn-register {
            text-decoration: underline;
            color: black;
            font-size: 14px;
            text-align: center;
            transition: color 0.3s ease;
        }

            .btn-register:hover {
                color: purple;
            }
    </style>

    <!--  JavaScript del login -->
    <script src="/js/login.js"></script>

</body>
</html>
