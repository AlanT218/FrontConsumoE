@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>

    <!-- Fuente personalizada para el título -->
    <link href="https://fonts.googleapis.com/css2?family=Chau+Philomene+One&display=swap" rel="stylesheet">
    <!-- Íconos de Material Design -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <!-- Contenedor principal con diseño dividido -->
    <div class="container">
        <!-- Sección izquierda: Logo -->
        <div class="logo-section">
            <img src="~/Img/LogoGestion.png" alt="Logo del Proyecto" class="logo">
        </div>

        <!-- Sección derecha: Formulario de inicio de sesión -->
        <div class="login-section">
            <h2 class="form-title">Iniciar sesión</h2>
            <form>
                <!-- Campo de usuario -->
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <div class="input-group">
                        <span class="material-icons">account_circle</span>
                        <input type="text" id="username" name="username">
                    </div>
                </div>

                <!-- Campo de contraseña -->
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <div class="input-group">
                        <span class="material-icons">lock</span>
                        <input type="password" id="password" name="password">
                    </div>
                </div>

                <!-- Botones de acción centrados -->
                <div class="button-container">
                    <a class="nav-link nav-link-custom" asp-area="" asp-controller="User" asp-action="CreateUser">
                        Crear Usuario
                    </a>
                </div>

            </form>
        </div>
    </div>

    <style>
        /* ======= Estilos Generales ======= */
        body {
            margin: 0;
            height: 100vh;
            background-color: #bdebc3; /* Fondo verde claro */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* ======= Contenedor principal ======= */
        .container {
            display: flex;
            width: 650px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            overflow: hidden; /* Evita márgenes blancos */
        }

        /* ======= Sección del logo ======= */
        .logo-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
            padding: 20px;
        }

        /* Logo  */
        .logo {
            width: 250px; /* Aumentado el tamaño */
            height: auto;
        }

        /* Sección del formulario */
        .login-section {
            flex: 1;
            background-color: #d3d3d3;
            padding: 20px;
            text-align: center;
        }

        /* Titulo del formulario */
        .form-title {
            font-size: 35px;
            font-weight: bold;
            color: #008000;
            text-shadow: 2px 2px 2px #004d00;
            font-family: "Chau Philomene One", sans-serif;
            margin-bottom: 20px;
        }

        /* Campos de entrada */
        .form-group {
            text-align: left;
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            font-size: 14px;
            display: block;
        }

        .input-group {
            display: flex;
            align-items: center;
            background: white;
            border: 2px solid black;
            border-radius: 25px;
            padding: 5px;
        }

            .input-group span {
                font-size: 24px;
                padding: 5px;
            }

        input {
            border: none;
            outline: none;
            flex: 1;
            padding: 8px;
            font-size: 14px;
            text-align: center;
        }

        /* Contenedor para centrar los botones */
        .button-container {
            display: flex;
            flex-direction: column; /* Acomoda los elementos en columna */
            align-items: center; /* Centra los elementos horizontalmente */
            margin-top: 10px;
        }

        /* Boton de ingresar */
        .btn-submit {
            width: 45%;
            padding: 8px;
            background: linear-gradient(to bottom, #bbb, #555);
            box-shadow: inset 0px -3px 5px rgba(0, 0, 0, 0.3), 0px 3px 5px rgba(0, 0, 0, 0.2);
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-size: 18px;
            color: white;
            font-family: "Chau Philomene One", sans-serif;
            margin-bottom: 10px; /* Espacio entre el botón y el enlace */
        }

        /*  Enlace */
        .btn-register {
            text-decoration: none;
            color: black;
            font-size: 14px;
        }
    </style>
</body>
</html>
